<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.GreenFamer.dao.OrderDao">
    <insert id="insertOrder" parameterType="Orders" keyProperty="id" useGeneratedKeys="true">
        INSERT into orders (mem_id,add_id,price,create_date,state,remark
        VALUES (#{memId},#{addId},#{price},#{createDate},#{state},#{remark})
    </insert>
    <update id="updateOrder"  parameterType="Orders">
        update orders
         set state=state+1
        WHERE id=#{id}
    </update>
    <update id="deleteOrder" parameterType="Orders">
        update orders
         set state=0
        WHERE id=#{id}
    </update>
    <select id="getOrderList" resultType="Orders" parameterType="ResponseInfo">
        SELECT * FROM orders
        ORDER BY create_date
        limit ${start},${length};
    </select>
    <select id="getOrderListCount" resultType="int" parameterType="ResponseInfo">
        SELECT COUNT(*) FROM orders
        ORDER BY create_date
    </select>
    <select id="getDeleteOrderList" resultType="Orders" parameterType="ResponseInfo">
        SELECT * FROM orders
        WHERE state=0
        ORDER BY create_date
        limit ${start},${length};
    </select>
    <select id="getDeleteOrderListCount" resultType="int" parameterType="ResponseInfo">
        SELECT COUNT(*) FROM orders
        WHERE state=0
        ORDER BY create_date
    </select>
    <select id="getOrder" parameterType="Orders" resultType="Orders">
        SELECT * FROM  orders
        where id=#{id}
    </select>
</mapper>


